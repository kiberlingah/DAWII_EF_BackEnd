package com.dawii.EFAtencioKiberling.repo;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.dawii.EFAtencioKiberling.model.Ticket;

public interface TicketRepo extends JpaRepository<Ticket,Integer> {
	
	@Query("SELECT new  com.dawii.EFAtencioKiberling.projections.ReporteUsuarioCategoriaClass("
			+ "u.id AS userId ," 
	       + "u.name ," 
	       + "u.lastname ," 
	       + "c.id AS categoryId," 
	       + "c.name AS categoryName"
	       +"FROM Ticket t"
	       +"INNER JOIN users u"
	       +"INNER JOIN categories c")
	public List<Object[]> getReporteUsuarioCategory();


}
